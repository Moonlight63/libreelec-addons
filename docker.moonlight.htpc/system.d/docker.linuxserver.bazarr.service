[Unit]
Description=%p container
Requires=service.system.docker.service
After=service.system.docker.service

[Service]
Restart=always
RestartSec=10s
StartLimitInterval=86400
StartLimitBurst=3
TimeoutStartSec=0
ExecStart=/bin/sh /storage/.kodi/addons/%p/bin/docker.linuxserver.bazarr
ExecStop=/storage/.kodi/addons/service.system.docker/bin/docker kill bazarr

[Install]
WantedBy=multi-user.target
